@using Microsoft.AspNetCore.Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Academy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <header class="bg-dark text-light p-3 shadow-sm">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h5 mb-0">Welcome to Academy, @User.Identity.Name</h1>
            </div>
            <nav>
                @if (User.Identity.IsAuthenticated)
                {
                        <form asp-action="Logout" asp-controller="User" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-light">Logout</button>
                        </form>
                }
                else
                {
                        <a class="btn btn-outline-primary btn-sm mx-1" href="/">Main</a>
                        <a class="btn btn-outline-success btn-sm mx-1" href="/user/register">Register</a>
                        <a class="btn btn-outline-info btn-sm mx-1" href="/user/auth">Login</a>
                }
            </nav>
        </div>
        @if (User.IsInRole("admin"))
        {
                <nav class="container mt-3">
                    <ul class="nav nav-pills justify-content-center">
                        <li class="nav-item">
                            <a asp-action="Create" asp-controller="Users" class="nav-link btn btn-outline-primary mx-2">Add User</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Update" asp-controller="Users" class="nav-link btn btn-outline-warning mx-2">Update User</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Users" class="nav-link btn btn-outline-info mx-2">Read User</a>
                        </li>
                    </ul>
                </nav>
        }
        else
        {
                <nav class="container mt-3">
                    <ul class="nav justify-content-center">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Users" class="nav-link text-dark">Read User</a>
                        </li>
                    </ul>
                </nav>
        }
    </header>

    <main class="container my-5">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light text-center py-3">
        <p class="mb-0">&copy; 2024 - Academy</p>
    </footer>
</body>
</html>
