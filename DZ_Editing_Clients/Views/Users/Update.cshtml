@model DZ_Editing_Clients.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewData["Title"] = "Update Product";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-dark">Update Product</h2>
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <form asp-action="Update" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Id" class="form-label text-muted">Product ID</label>
                    <input asp-for="Id" class="form-control border-dark" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="form-label text-muted">First Name</label>
                    <input asp-for="FirstName" class="form-control border-dark" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="LastName" class="form-label text-muted">Last Name</label>
                    <input asp-for="LastName" class="form-control border-dark" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label text-muted">Email</label>
                    <textarea asp-for="Email" class="form-control border-dark"></textarea>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-dark me-2 px-4">Update</button>
                    <a href="@Url.Action("Index", "Users")" class="btn btn-outline-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>



