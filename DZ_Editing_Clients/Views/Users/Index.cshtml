@model IEnumerable<DZ_Editing_Clients.Models.User>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Read User";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-dark">Users</h2>
    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("Create")" class="btn btn-dark px-4">Add New User</a>
    </div>
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td class="text-center">
                                <a href="@Url.Action("Update", new { id = user.Id })" class="btn btn-outline-warning btn-sm me-2">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="@Url.Action("Details", new { id = user.Id })" class="btn btn-outline-info btn-sm me-2">
                                    <i class="fas fa-info-circle"></i> View
                                </a>
                                <a href="@Url.Action("Delete", new { id = user.Id })" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
