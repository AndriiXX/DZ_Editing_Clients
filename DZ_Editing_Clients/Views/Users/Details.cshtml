@model DZ_Editing_Clients.Models.User
@{
    Layout = "_Layout";
    ViewData["Title"] = "User Details";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-dark">User Details</h2>
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">User ID: @Model.Id</h5>
        </div>
        <div class="card-body p-4">
            <div class="row mb-3">
                <div class="col-md-3 fw-bold text-muted">First Name:</div>
                <div class="col-md-9">@Model.FirstName</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 fw-bold text-muted">Last Name:</div>
                <div class="col-md-9">@Model.LastName</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 fw-bold text-muted">Email:</div>
                <div class="col-md-9">@Model.Email</div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-center gap-3">
            <a href="@Url.Action("Index", "Users")" class="btn btn-outline-secondary px-4">Back to List</a>
            <a href="@Url.Action("Update", "Users", new { id = Model.Id })" class="btn btn-outline-warning px-4 text-dark">Edit</a>
            <a href="@Url.Action("Delete", "Users", new { id = Model.Id })" class="btn btn-outline-danger px-4">Delete</a>
        </div>
    </div>
</div>
